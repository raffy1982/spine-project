UPMA_DIR:=$(SPINE_TOSROOT)/tos/lib/upma
UPMA_MAKE_DIR:=$(SPINE_TOSROOT)/support/make

UPMA_RADIO ?= cc2420
UPMA_MAC ?= scp
UPMA_TOPOLOGY ?= nulltopology

UPMA_SUBCOMPONENTS := \
	types \
	system \
        interfaces \
	lib/alarm \
	lib/serial \
	chips/$(UPMA_RADIO) \
	lib/topologies/$(UPMA_TOPOLOGY) \

CFLAGS += $(foreach i,$(UPMA_SUBCOMPONENTS), -I$(UPMA_DIR)/$(i))
include $(UPMA_MAKE_DIR)/$(UPMA_MAC).include
