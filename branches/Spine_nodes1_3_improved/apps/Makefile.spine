
SPINE_TOSROOT=$(shell SUPPORT_MAKE_PATH=.; while [ ! -d $$SUPPORT_MAKE_PATH/support/make ]; do SUPPORT_MAKE_PATH=../$$SUPPORT_MAKE_PATH; done; echo $$SUPPORT_MAKE_PATH)

TOSMAKE_PATH += $(SPINE_TOSROOT)/support/make
GOALS += spine
SENSORBOARD ?= spine
PFLAGS += -DBUFFER_POOL_SIZE=6
PFLAGS += -DLOW_POWER_LISTENING
PFLAGS += -DPACKET_LINK

